// This is the Prisma Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// --- Auth (NextAuth) ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For Credentials provider
  role          String    @default("USER") // USER, ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  chats         ChatSession[]
  prompts       PromptTemplate[]
  usageLogs     UsageLog[]
  auditLogs     AuditLog[]
  snippets      Snippet[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- AI Service ---
model ModelConfig {
  id          String   @id @default(cuid())
  name        String   // Display name
  provider    String   // openai, ollama, vllm
  modelId     String   // The actual model ID sent to API
  baseUrl     String?
  apiKey      String?  // Store encrypted ideally
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChatSession {
  id        String        @id @default(cuid())
  title     String
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  messages  ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(cuid())
  chatId    String
  chat      ChatSession @relation(fields: [chatId], references: [id], onDelete: Cascade)
  role      String      // user, assistant, system
  content   String
  createdAt DateTime    @default(now())
}

model PromptTemplate {
  id          String   @id @default(cuid())
  title       String
  content     String
  description String?
  isPublic    Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- RAG ---
model Document {
  id        String   @id @default(cuid())
  title     String
  content   String   // Text content
  metadata  String?  // JSON string
  createdAt DateTime @default(now())
}

// --- Monitoring ---
model UsageLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  model     String
  tokensIn  Int      @default(0)
  tokensOut Int      @default(0)
  cost      Float    @default(0.0) // Estimated cost in USD
  type      String   @default("chat") // chat, embedding, tool
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String   // e.g. UPDATE_USER_ROLE
  resource  String   // Target ID
  details   String?  // JSON details
  ipAddress String?
  createdAt DateTime @default(now())
}

model ToolConfig {
  id          String   @id @default(cuid())
  key         String   @unique // e.g. "rag_search"
  name        String
  description String?
  isEnabled   Boolean  @default(true)
  config      String?  // JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- AI Quality & Reliability ---
model ResponseEvaluation {
  id            String   @id @default(cuid())
  messageId     String   // Link to ChatMessage (no relation to avoid circular dep issues in some setups, or strictly relate)
  // For strict relation:
  // message       ChatMessage @relation(fields: [messageId], references: [id])
  scoreAccuracy Float?   // 0.0 - 1.0
  scoreRelevance Float?  // 0.0 - 1.0
  scoreStyle    Float?   // 0.0 - 1.0
  feedback      String?  // Text explanation
  createdAt     DateTime @default(now())
}

model UserFeedback {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  rating    Int      // 1 (Like) or -1 (Dislike)
  reason    String?  // Optional text
  createdAt DateTime @default(now())
}

model Citation {
  id        String   @id @default(cuid())
  messageId String
  sourceId  String?  // ID of the RAG Document
  url       String?  // External URL
  snippet   String?  // Quoted text
  createdAt DateTime @default(now())
}

// --- Cost & Authorization ---
model CostRate {
  id        String   @id @default(cuid())
  modelId   String   @unique // Matches ModelConfig.modelId
  inputPrice  Float  // Per 1K tokens
  outputPrice Float  // Per 1K tokens
  currency    String @default("USD")
  updatedAt   DateTime @updatedAt
}

model Budget {
  id        String   @id @default(cuid())
  entityType String  // USER, DEPARTMENT, ORGANIZATION
  entityId   String  // User ID or Dept ID
  limit      Float   // Monthly limit amount
  spent      Float   @default(0.0) // Current accumulated spend
  period     String  // YYYY-MM
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([entityType, entityId, period])
}

// --- Governance ---
model Policy {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   // BLOCK_KEYWORD, PII_FILTER, TOPIC_BAN
  rules       String   // JSON: e.g. ["offensive", "competitor"] or regex
  action      String   // BLOCK, FLAG, MASK
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum DataClassification {
  PUBLIC
  INTERNAL
  CONFIDENTIAL
  RESTRICTED
}

// --- MLOps & Deployment ---
model ModelDeployment {
  id          String   @id @default(cuid())
  name        String
  endpoint    String
  version     String
  strategy    String   // CANARY, BLUE_GREEN, ROLLING
  status      String   // DEPLOYING, ACTIVE, FAILED
  trafficSplit Int     @default(100) // Percentage 0-100
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- Agents & Plugins ---
model AgentWorkflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  trigger     String   // MANUAL, SCHEDULE, EVENT
  steps       String   // JSON definition of workflow steps
  isActive    Boolean  @default(false)
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Plugin {
  id          String   @id @default(cuid())
  name        String
  version     String
  manifest    String   // JSON OpenAPI/Manifest
  isEnabled   Boolean  @default(false)
  requiredRole String? // ADMIN, MANAGER, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- Operations ---
model Announcement {
  id          String    @id @default(cuid())
  title       String
  content     String
  priority    String    @default("NORMAL") // LOW, NORMAL, HIGH, CRITICAL
  isActive    Boolean   @default(true)
  startDate   DateTime  @default(now())
  endDate     DateTime?
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model SystemStatus {
  id          String   @id @default(cuid())
  service     String   @unique // CHAT, RAG, EMBEDDING, API
  status      String   // OPERATIONAL, DEGRADED, OUTAGE
  message     String?
  updatedAt   DateTime @updatedAt
}

// --- Webhooks ---
model Webhook {
  id          String   @id @default(cuid())
  name        String
  url         String
  events      String   // JSON: ["CHAT_COMPLETE", "DOCUMENT_UPLOADED"]
  secret      String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WebhookLog {
  id          String   @id @default(cuid())
  webhookId   String
  event       String
  payload     String   // JSON
  status      Int
  response    String?
  createdAt   DateTime @default(now())
}

// --- Snippets (Input Fragments) ---
model Snippet {
  id          String   @id @default(cuid())
  title       String
  content     String
  tags        String   @default("[]") // JSON array
  category    String   @default("prompt") // prompt, code, template, instruction, other
  usageCount  Int      @default(0)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- System Configuration ---
model SystemConfig {
  key         String   @id @unique
  value       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- Summarization History ---
model SummaryHistory {
  id             String   @id @default(cuid())
  fileName       String
  fileSize       Int
  fileType       String
  originalLength Int
  summaryLength  Int
  summary        String
  keyPoints      String   @default("[]") // JSON array
  keywords       String   @default("[]") // JSON array
  modelUsed      String?
  parsingMethod  String?
  userId         String?
  createdAt      DateTime @default(now())
}

// 노트북: 사용자/팀 단위 지식 컨테이너
model Notebook {
  id          String   @id @default(cuid())
  name        String
  description String?
  scope       String   @default("PERSONAL") // PERSONAL, TEAM, ORGANIZATION
  ownerId     String
  isPublic    Boolean  @default(false)
  tags        String   @default("[]") // JSON array
  
  // 관리자 필드
  status      String   @default("ACTIVE") // ACTIVE, INACTIVE, DELETED
  deletedAt   DateTime?
  templateId  String?  // 템플릿에서 생성된 경우
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  sources     KnowledgeSource[]
  shares      NotebookShare[]
  comments    NotebookComment[]
  qnaHistory  QnAHistory[]
}

// 지식 소스: 문서, URL, 텍스트, DB 스냅샷
model KnowledgeSource {
  id           String   @id @default(cuid())
  notebookId   String
  notebook     Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  
  type         String   // FILE, URL, TEXT, DB_SNAPSHOT
  title        String
  originalName String?  // 원본 파일명
  content      String   // 원문 텍스트
  contentHash  String?  // 중복 방지용 해시
  url          String?  // URL 타입인 경우
  fileSize     Int?
  fileType     String?
  
  status       String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, ERROR
  errorMessage String?
  
  uploaderId   String?
  version      Int      @default(1)
  metadata     String?  // JSON
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  chunks       KnowledgeChunk[]
}

// 청크: 의미 단위 분할 텍스트
model KnowledgeChunk {
  id           String   @id @default(cuid())
  sourceId     String
  source       KnowledgeSource @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  
  content      String   // 청크 텍스트
  chunkIndex   Int      // 순서
  startOffset  Int?     // 원문 시작 위치
  endOffset    Int?     // 원문 끝 위치
  
  embedding    String?  // JSON array (벡터)
  embeddingModel String? // 사용된 임베딩 모델
  
  tags         String   @default("[]") // 자동 태깅 결과
  keywords     String   @default("[]") // 키워드
  
  createdAt    DateTime @default(now())
}

// 노트북 공유
model NotebookShare {
  id          String   @id @default(cuid())
  notebookId  String
  notebook    Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  
  userId      String   // 공유 대상 사용자
  permission  String   @default("READ") // READ, EDIT, ADMIN
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([notebookId, userId])
}

// 노트북 코멘트
model NotebookComment {
  id          String   @id @default(cuid())
  notebookId  String
  notebook    Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  
  sourceId    String?  // 특정 소스에 대한 코멘트
  chunkId     String?  // 특정 청크에 대한 코멘트
  
  userId      String
  content     String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Q&A 히스토리 (개인 지식화)
model QnAHistory {
  id          String   @id @default(cuid())
  notebookId  String?
  notebook    Notebook? @relation(fields: [notebookId], references: [id], onDelete: SetNull)
  
  userId      String
  question    String
  answer      String
  citations   String   @default("[]") // JSON: [{sourceId, chunkId, snippet}]
  
  tags        String   @default("[]") // 자동 태깅
  isSaved     Boolean  @default(false) // 명시적 저장
  linkedQnaIds String  @default("[]") // 연결된 Q&A IDs
  
  rating      Int?     // 사용자 평가
  createdAt   DateTime @default(now())
}

model NotebookAudit {
  id          String   @id @default(cuid())
  notebookId  String
  userId      String
  action      String   // CREATE, UPDATE, DELETE, ADD_SOURCE, REMOVE_SOURCE
  details     String?  // JSON
  createdAt   DateTime @default(now())
}

// ========================================
// 노트북 관리자 시스템 (Admin Management)
// ========================================

// 관리자 역할 정의
model NotebookAdminRole {
  id          String   @id @default(cuid())
  userId      String
  roleType    String   // SYSTEM_ADMIN, ORG_ADMIN, KNOWLEDGE_ADMIN, SECURITY_ADMIN
  orgId       String?  // 조직 관리자인 경우 조직 ID
  permissions String   @default("[]") // JSON: ["CREATE", "DELETE", "MANAGE_POLICY"]
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, roleType, orgId])
}

// 노트북 정책 (생성/수정/삭제/Q&A 제어)
model NotebookPolicy {
  id          String   @id @default(cuid())
  name        String
  description String?
  policyType  String   // CREATION, MODIFICATION, DELETION, QA_CONTROL, UPLOAD
  
  // 정책 규칙 (JSON)
  rules       String   // JSON: { maxNotebooksPerUser, allowedFileTypes, maxFileSize, ... }
  
  // 범위
  scope       String   @default("GLOBAL") // GLOBAL, ORGANIZATION, USER
  scopeId     String?  // 조직 ID 또는 사용자 ID
  
  // Q&A 정책 상세
  blockExternalKnowledge Boolean @default(false)  // 외부 지식 차단
  requireCitation        Boolean @default(true)   // 근거 필수
  allowedQuestionTypes   String  @default("[]")   // JSON: ["SUMMARY", "COMPARE", "EXPLAIN"]
  maxContextTokens       Int     @default(4000)   // 컨텍스트 제한
  systemPrompt           String? // 고정 시스템 프롬프트
  
  priority    Int      @default(0)  // 우선순위 (높을수록 우선)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 파이프라인 설정 (청킹/임베딩/색인)
model PipelineConfig {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // 청킹 설정
  chunkingStrategy  String @default("SENTENCE") // SENTENCE, PARAGRAPH, FIXED, SEMANTIC
  chunkSize         Int    @default(512)
  chunkOverlap      Int    @default(50)
  
  // 임베딩 설정
  embeddingModel    String @default("text-embedding-ada-002")
  embeddingDimension Int   @default(1536)
  
  // 색인 설정
  indexType         String @default("HNSW") // HNSW, FLAT, IVF
  indexParameters   String @default("{}") // JSON: { m: 16, efConstruction: 100 }
  
  // 적용 범위
  scope       String   @default("GLOBAL") // GLOBAL, NOTEBOOK
  notebookId  String?  // 노트북별 설정인 경우
  
  // 버전 관리
  version     Int      @default(1)
  isDefault   Boolean  @default(false)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 노트북 예산/비용 관리
model NotebookBudget {
  id          String   @id @default(cuid())
  notebookId  String?
  orgId       String?  // 조직별 예산인 경우
  userId      String?  // 사용자별 예산인 경우
  
  // 토큰 한도
  tokenLimit      Int      @default(1000000)  // 월별 토큰 한도
  tokenUsed       Int      @default(0)
  
  // 비용 한도
  costLimit       Float    @default(100.0)    // 월별 비용 한도 (USD)
  costUsed        Float    @default(0.0)
  
  // 임베딩 한도
  embeddingLimit  Int      @default(100000)   // 월별 임베딩 문서 수
  embeddingUsed   Int      @default(0)
  
  // GPU 우선순위
  gpuPriority     Int      @default(5)        // 1-10 (높을수록 우선)
  
  // 캐시 정책
  cacheEnabled    Boolean  @default(true)
  cacheTTL        Int      @default(3600)     // 초 단위
  
  period          String   // YYYY-MM
  alertThreshold  Int      @default(80)       // % (경고 임계값)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([notebookId, period])
}

// 노트북 템플릿
model NotebookTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // 템플릿 내용
  defaultScope      String  @default("PERSONAL")
  defaultTags       String  @default("[]")  // JSON 배열
  defaultPipelineId String?
  defaultPolicyIds  String  @default("[]")  // JSON 배열
  
  // 초기 소스
  initialSources    String  @default("[]")  // JSON: [{ type, title, content }]
  
  // 초기 질문 예시
  sampleQuestions   String  @default("[]")  // JSON 배열
  
  // 분류
  category    String?
  tags        String  @default("[]")
  
  // 승인 상태
  isApproved  Boolean  @default(false)
  approvedBy  String?
  approvedAt  DateTime?
  
  createdBy   String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Q&A 응답 로그 (품질 모니터링)
model NotebookQALog {
  id          String   @id @default(cuid())
  notebookId  String
  userId      String
  
  // 질문/응답
  question    String
  answer      String
  
  // 품질 지표
  citationCount   Int      @default(0)   // 인용된 출처 수
  citationRate    Float?                 // 근거율 (0.0-1.0)
  responseTime    Int?                   // 응답 시간 (ms)
  tokenUsed       Int      @default(0)   // 사용된 토큰
  
  // 자동 평가
  autoScore       Float?                 // 자동 품질 점수
  isEmptyResponse Boolean  @default(false) // 빈 응답 여부
  
  // 사용자 평가
  userRating      Int?                   // 1-5
  userFeedback    String?
  
  // 지식 부족 플래그
  knowledgeGap    Boolean  @default(false)
  
  createdAt       DateTime @default(now())
}

// 처리 작업 큐 (파이프라인 재처리용)
model NotebookProcessingJob {
  id          String   @id @default(cuid())
  notebookId  String?
  sourceId    String?
  
  jobType     String   // REINDEX, REPROCESS, EMBEDDING_UPDATE
  status      String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  priority    Int      @default(5)
  
  // 진행 상황
  progress    Int      @default(0)   // 0-100
  totalItems  Int      @default(0)
  processedItems Int   @default(0)
  
  // 에러 정보
  errorMessage String?
  retryCount  Int      @default(0)
  maxRetries  Int      @default(3)
  
  // 스케줄링
  scheduledAt DateTime @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

